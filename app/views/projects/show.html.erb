<h2><%= @project.name %></h2>
<p><%= @project.description %></p>

<%= link_to "Edit", edit_project_path %>
<%= link_to "Delete", @project, method: :delete, data: { confirm: 'Are you sure?' } %>

<h1>Tickets</h1>


<% if @project.tickets.empty? %>
  <p>There are no tickets!</p>
<% else %>
  <%= render 'tickets/list', tickets: @project.tickets %>
<% end %>
