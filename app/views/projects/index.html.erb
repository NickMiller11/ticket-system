<h1>Projects</h1>

<% if @projects.empty? %>
  <p class="empty-list">There are no projects</p>
  <%= link_to "Add a project?", new_project_path %>
<% else %>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th class="number">Open Tickets</th>
        <th class="number">Total Tickets</th>
      </tr>
    </thead>
    <tbody>
      <% @projects.each do |project| %>
      <tr>
        <td><%= link_to project.name, project_path(project) %></td>
        <td class="number"><%= project.tickets.open.count %></td>
        <td class="number"><%= project.tickets.count %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

<% end %>

<br />
<%= link_to "New Project", new_project_path, class: "btn" %>
