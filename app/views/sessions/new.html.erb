<h1>Login</h1>

<%= form_with(url: login_path, local: true) do |f| %>
  <div class="field">
    <%= f.label :email %>
    <%= f.text_field :email, id: :user_email %>
  </div>
  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password, id: :user_password %>
  </div>
  <div class="actions">
    <%= f.submit "Login" %>
  </div>

<% end %>
